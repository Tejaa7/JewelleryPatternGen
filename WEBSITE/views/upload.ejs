    <section class="problem-solution-section" style="border: none; margin: 0; padding: 0;padding-bottom: 50px;">
        <div class="fluid-container" style="border: none; margin: 0; padding: 0;background-color: #f1ebe5;">
            <div class="row d-flex align-items-center" style="margin: 0;">
                <div class="col-lg-8 d-flex justify-content-center" style="border: none; margin: 0; padding: 0;">
                    <!-- Video Placeholder (65% width) -->
                    <video class="img-fluid" autoplay muted loop style="max-height: 100%; width: 100%; object-fit: cover; border: none; margin: 0; padding: 0;height: 640px;">
                        <source src="/images/uploadvideo.mp4" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
                <div class="col-lg-4" style="font-family: Georgia, 'Times New Roman', Times, serif;text-align: right;">
