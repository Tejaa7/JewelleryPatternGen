<body> 
    <div class="nav-container">
        <div class="logo" >
            <a href="/Home"><img src="/images/LOGO1.jpg" alt="Logo"></a>
        </div>
        <ul class="nav">
            <li class="nav-item"><a class="nav-link" href="/Home">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/traditional">Traditional</a></li>
            <li class="nav-item"><a class="nav-link" href="/modern">Modern</a></li>
            <li class="nav-item"><a class="nav-link" href="/upload">Upload</a></li>
            <li class="nav-item"><a class="nav-link" href="/contactus">Contact Us</a></li>
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
        </ul>
    </div>
    <section class="hero-section">
        <video autoplay muted loop>
            <source src="/images/traditionalvideo.mov" type="video/mp4">
        </video>
        <p class=" Inline">
            Traditional Jewellery
        </p>
    </section>
    <header><a href="/Home"></a><div class="logo"></div> </header>
    <footer>
        <div class="container">
            <div class="leftbox">
                <label for="imageUpload1" class="upload-label">Upload Your Sketch</label>
                <input type="file" class="left" id="imageUpload1" accept="image/*" />
                <div id="imagePreviewContainer1">
                    <div id="imagePreview">
                        <img id="previewImg1" src="" alt="Image Preview">
                    </div>
                </div>
            </div>

            <div class="arrow">â†’</div>

            <div class="rightbox">
                <label for="imageUpload2" class="upload-label">Your Final Product</label>
                <input type="file" class="right" id="imageUpload2" accept="image/*" />
                <div id="imagePreviewContainer2">
                    <div id="imagePreview">
                        <img id="previewImg2" src="" alt="Image Preview">
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script>
        document.getElementById('imageUpload1').addEventListener('change', function(event) {
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function(e) {
                const previewImg = document.getElementById('previewImg1');
                previewImg.src = e.target.result;
                previewImg.style.display = 'block';
            }

            if (file) {
                reader.readAsDataURL(file);
            }
        });

        document.getElementById('imageUpload2').addEventListener('change', function(event) {
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function(e) {
                const previewImg = document.getElementById('previewImg2');
                previewImg.src = e.target.result;
                previewImg.style.display = 'block';
            }

            if (file) {
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
